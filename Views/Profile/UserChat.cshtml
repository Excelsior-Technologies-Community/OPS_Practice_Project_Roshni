@{
    ViewData["Title"] = "User Chat Page";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<link href="~/css/chat.css" rel="stylesheet" />


<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="chat-box-left">
                <!-- Chat Tabs -->
                <ul class="nav nav-pills mb-3 nav-justified" id="chat-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" id="general_chat_tab" data-bs-toggle="pill" href="#general_chat">General</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="group_chat_tab" data-bs-toggle="pill" href="#group_chat">Groups</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="personal_chat_tab" data-bs-toggle="pill" href="#personal_chat">Personal</a>
                    </li>
                </ul>

                <!-- Chat Search Box -->
                <div class="chat-search">
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" id="chat-search" class="form-control form-control-sm" placeholder="Search">
                            <span class="input-group-append">
                                <button type="button" class="btn btn-soft-primary btn-sm"><i class="fas fa-search"></i></button>
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Chat Content -->
                <div class="tab-content">
                    <!-- General Chat -->
                    <div class="tab-pane fade show active" id="general_chat">
                        <div class="chat-box">
                            <p class="text-muted text-center">No messages yet.</p>
                        </div>
                    </div>

                    <!-- Group Chat -->
                    <div class="tab-pane fade" id="group_chat">
                        <div class="chat-box">
                            <p class="text-muted text-center">No group chats available.</p>
                        </div>
                    </div>

                    <!-- Personal Chat -->
                    <div class="tab-pane fade" id="personal_chat">
                        <div class="chat-box">
                            <p class="text-muted text-center">No personal messages yet.</p>
                        </div>
                    </div>
                </div> <!-- End tab-content -->
            </div> <!-- End chat-box-left -->
        </div> <!-- End col-12 -->
    </div> <!-- End row -->
</div> <!-- End container -->
<!-- Include Bootstrap -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
