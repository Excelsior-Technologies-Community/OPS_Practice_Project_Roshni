@{
    ViewData["Title"] = "Chat";
}

<link href="~/css/chat.css" rel="stylesheet" />

<div class="chat-container">
    <!-- Chat Header -->
    <div class="chat-header">
        <h2>Chat</h2>
        <div class="icons">
            <i class="fas fa-phone"></i>
            <i class="fas fa-video"></i>
            <i class="fas fa-trash"></i>
        </div>
    </div>

    <!-- Chat Messages -->
    <div class="chat-messages">
        <div class="message received">Hello! How are you?</div>
        <div class="message sent">I'm good! What about you?</div>
        <div class="message received">I'm doing great. Thank you!</div>
        <div class="message sent">Awesome! Let's catch up soon.</div>
    </div>

    <!-- Chat Input -->
    <div class="chat-input">
        <input type="text" id="messageInput" placeholder="Type a message...">
        <button onclick="sendMessage()">Send</button>
    </div>
</div>

<script>
    function sendMessage() {
        let inputField = document.getElementById("messageInput");
        let messageText = inputField.value.trim();

        if (messageText !== "") {
            let chatMessages = document.querySelector(".chat-messages");
            let messageDiv = document.createElement("div");
            messageDiv.classList.add("message", "sent");
            messageDiv.innerText = messageText;
            chatMessages.appendChild(messageDiv);
            inputField.value = "";

            // Scroll to bottom
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }
    }
</script>